<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg2">


    <TextView
        android:id="@+id/vato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VATO"
        android:gravity="center_horizontal"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="a place to find work"
        android:layout_below="@id/vato"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="Pilih Sesuai Bidangmu"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/menu"
        android:layout_marginTop="31dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:orientation="horizontal"
        android:layout_below="@id/slogan">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/find"
            android:src="@drawable/find">
        </ImageView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="271dp"
            android:id="@+id/option"
            android:src="@drawable/option">
        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/job1"
        android:layout_below="@id/text1"
        android:layout_marginTop="10dp"
        android:gravity="center">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="50dp"
            android:src="@drawable/designer"
            android:id="@+id/designer">

        </ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="40dp"
            android:src="@drawable/pengembang"
            android:id="@+id/pengembang">

        </ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="50dp"
            android:src="@drawable/dokter"
            android:id="@+id/dokter">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="20dp"
        android:id="@+id/baris1"
        android:layout_below="@id/job1"
        android:gravity="left">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:text="Desainer"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Pengembang"
            android:layout_marginRight="10dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Dokter"
            android:layout_marginLeft="60dp"
            android:layout_gravity="right"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/job2"
        android:layout_below="@id/baris1"
        android:layout_marginTop="20dp"
        android:gravity="center">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="50dp"
            android:src="@drawable/barbel"
            android:id="@+id/barbel">

        </ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="40dp"
            android:src="@drawable/maintenance"
            android:id="@+id/maintenance">

        </ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="50dp"
            android:src="@drawable/manager"
            android:id="@+id/manager">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="20dp"
        android:id="@+id/baris2"
        android:layout_below="@id/job2"
        android:gravity="left">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:text="Pelatih Gym"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Maintenance"
            android:layout_marginRight="10dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Manager"
            android:layout_marginLeft="50dp"
            android:layout_gravity="right"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/job3"
        android:layout_below="@id/baris2"
        android:layout_marginTop="20dp"
        android:gravity="center">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="50dp"
            android:src="@drawable/guru"
            android:id="@+id/guru">

        </ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="40dp"
            android:src="@drawable/operatorproduksi"
            android:id="@+id/op">

        </ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="50dp"
            android:src="@drawable/marketing"
            android:id="@+id/marketing">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="20dp"
        android:id="@+id/baris3"
        android:layout_below="@id/job3"
        android:gravity="left">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:text="Guru"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Operator Produksi"
            android:layout_marginLeft="1dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Marketing"
            android:layout_marginLeft="40dp"
            android:layout_gravity="right"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/job4"
        android:layout_below="@id/baris3"
        android:layout_marginTop="20dp"
        android:gravity="center">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="50dp"
            android:src="@drawable/supir"
            android:id="@+id/supir">

        </ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="40dp"
            android:src="@drawable/magang"
            android:id="@+id/magang">

        </ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="50dp"
            android:src="@drawable/ic_baseline_format_list_bulleted_24"
            android:id="@+id/lainnya">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="20dp"
        android:id="@+id/baris4"
        android:layout_below="@id/job4"
        android:gravity="left">
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:text="Supir"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Magang"
            android:layout_marginLeft="15dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Lainnya"
            android:layout_marginLeft="50dp"
            android:layout_gravity="right"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:id="@+id/job5"
        android:layout_below="@id/baris4"
        android:layout_marginTop="100dp"
        android:gravity="center">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:src="@drawable/eksplor">

        </ImageView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:src="@drawable/home">

        </ImageView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:src="@drawable/mail">

        </ImageView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:src="@drawable/notif">

        </ImageView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:src="@drawable/profil">

        </ImageView>


    </LinearLayout>


</RelativeLayout>